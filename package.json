{
  "name": "solhub-ico",
  "version": "1.0.0",
  "description": "Solhub Smart Contract's",
  "scripts": {
    "lint-contracts": "hardhat check",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage --testfiles ./test/*.js --solcoverjs ./.solcover.js",
    "hhn": "hardhat node",
